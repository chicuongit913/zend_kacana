echo '<tr><td>Nội dung</td><td>'.$this->formRow($form->get('content')).'</td></tr>';
echo '<tr><td colspan=\'2\'><input type=\'submit\' id=\'submitbutton\' value=\'Thêm\'/></td></tr>';
echo '</table>';
echo $this->form()->closeTag();