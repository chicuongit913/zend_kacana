#newsform input
{
	width: 300px;
}
#submitbutton
{
	width: 100px !important;
}
#newsform textarea
{
	width: 300px;
	height: 100px;
}
.error
{
	color: red;
}

#container a
{
	display: block;
	margin-bottom: 20px;
}

.table
{
	width:inherit;
	color:#313235;
}

.table a
{
	display: inline !important;
	margin-bottom: none;
}
.table tr th
{
	border-bottom: 1px solid #7D8190;
	border-top: 1px solid #7D8190;
}
.table tr td
{
	border-bottom: 1px solid #7D8190;
	text-align: center;
}

.table tr:first-child
{
	background-color: #8097F0;
}

.table tr:nth-child(2n+3)
{
	background-color: #F8F6F1;
}