<?php
	// SET DATA FOR FORM 
	$data = (isset($this->data))?$this->data:0;
	
	// BEGIN FORM 
	$this->form_helper()->beginForm();
	
	// FIELD PUBLIC FORM INCLUDE STATUS-PRIORITY-CREATED-UPDATED
